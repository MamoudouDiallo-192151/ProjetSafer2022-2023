<!-- Property Section Begin -->
<section class="property-section spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="section-title">
					<h4>Nos Biens</h4>
				</div>
			</div>
		</div>
		<div class="row">
			{% for bien in biens %}
				<div class="col-lg-4 col-md-6">
					<div class="property-item">
						<div class="pi-pic set-bg" data-setbg="{{asset('img/property/property-1.jpg')}}">
							{% if bien.statusBien==1 %}
								<div class="label c-red">En vente</div>
							{% else %}
								<div class="label">
									En Location
								</div>

							{% endif %}
						</div>
						<div class="pi-text">
							<a href="#" class="heart-icon">
								<span class="icon_heart_alt"></span>
							</a>
							<div class="pt-price">{{bien.prix}}Â£<span>
									{% if bien.statusBien==0 %}/mois
									{% endif %}
								</span>
							</div>
							<h5>
								<a href="{{path('bien_show',{id:bien.id})}}">{{bien.titre}}</a>
							</h5>
							<p>
								<span class="icon_pin_alt"></span>
								{{bien.ville}}({{bien.codePostal}})</p>
							<ul>
								<li>
									<i class="fa fa-object-group"></i>
									{{bien.surface}}
									m2</li>
							</ul>
							<div class="pi-agent">
								<div class="pa-item">
									<div class="pa-info">
										<img src="{{asset('img/property/posted-by/pb-1.jpg')}}" alt="">
										<h6>Ashton Kutcher</h6>
									</div>
									<div class="pa-text">
										123-455-688
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</section>
		<!-- Property Section End -->
	</body>
</section>
