<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}
{% block title %}{% endblock %}

{% block body %}
	<div style="margin: auto;">
		<div class="bg-light shadow border rounded-lg p-4">
			<div class="container py-1 h-70">
				<div class="row justify-content-center align-items-center h-100">
					<div class="col-12 col-lg-9 col-xl-6">
						<div class="card shadow-2-strong " style="border-radius: 15px; width:35rem;">
							<div class="card-body p-4 p-md-5">
								<h3 class="font-weight-light">Veuillez vous inscrire</h3>
								{{ form_start(registrationForm) }}
								<div class="row">
									<div class="col-12 col-md-6 mb-2">
										{{ form_row(registrationForm.nom) }}
									</div>
									<div class="col-12 col-md-6 mb-2">
										{{ form_row(registrationForm.prenom) }}
									</div>
								</div>
								<div class="row">
									<div class="col-12 col-md-6 mb-2">
										{{ form_row(registrationForm.email,{'row_attr':{'class':"w-100"}}) }}
									</div>
								</div>
								<div class="row">
									<div class="col-12 col-md-6 mb-2">
										{{ form_row(registrationForm.password.first) }}
									</div>
									<div class="col-12 col-md-6 mb-2">
										{{ form_row(registrationForm.password.second) }}
									</div>
								</div>
								<div class="row">
									<div class="col-12 col-md-6 mb-2">
										{{ form_row(registrationForm.numeroTelephone) }}
									</div>
									<div class="col-12 col-md-6 mb-2">
										{{ form_row(registrationForm.adresse) }}
									</div>
								</div>
								{{ form_row(registrationForm.agreeTerms) }}
								<button type="submit" class="btn btn-success">S'inscrire</button>
							</div>
							{{ form_end(registrationForm) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
